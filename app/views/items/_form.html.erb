
<%= form_for([@sale, @sale.items.build], remote: true, html: { multipart: true }) do |form| %>

  <div class="field">
    <%= form.label :item_name %><br>
    <%= form.text_field :item_name, id: :item_item_name %>
  </div>

  <div class="field">
    <%= form.label :item_description %><br>
    <%= form.text_area :item_description, id: :item_item_description %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.text_field :price, id: :item_price %>
  </div>
  <br>
  <div class="field">
    <%= form.file_field :image, id: :attach %>
  </div>

  <input type="hidden" name="item[sale_id]" id="sale_id" value="<%=@sale.id%>" >
  <br>
  <div class="actions">
    <%= form.submit id: :add_new_item_button %>
  </div>
<% end %>
