<h2>Items:</h2>
<% @sale.items.each do |item| %>

    <p>
      <strong>Item name:</strong>
      <%= item.item_name %>
    </p>

    <p>
      <strong>Item description:</strong>
      <%= item.item_description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= item.price %>
    </p>
    <%= link_to 'Show Item', sale_item_path(item.sale_id, item.id) %> |
    <%= link_to 'Edit Item', edit_sale_item_path(item.sale_id, item.id) %> |
    <%= link_to 'Delete Item', item, method: :delete, data: { confirm: 'Are you sure?' } %>
    <hr>

<% end %>
