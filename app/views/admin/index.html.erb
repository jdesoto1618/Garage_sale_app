<br><br>
<div class="table-view">

<h1>Users</h1>
<table>
  <thead>
    <thead>
      <tr>
        <th>Email</th><th>Role</th><th></th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.roles.last.name %></td>
      <td>
        <%= form_tag("/admin/" + user.id.to_s + "?role=admin", method: :PUT) do %>
          <input type="submit" value="Change Role"/>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<div class="search">
  <form method="get" action="/admin">
    <span class="search-headers"><label for="search">Find Garage Sales:</label></span><br>
    <input type="text" name="search" placeholder ="City or Zip" >
    <input type="submit" value="Search">
  </form>
</div>
<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.street %></td>
        <td><%= sale.city %></td>
        <td><%= sale.state %></td>
        <td><%= sale.zip %></td>
        <td><%= sale.date %></td>
        <td><%= sale.time %></td>
        <td><%= sale.description %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
