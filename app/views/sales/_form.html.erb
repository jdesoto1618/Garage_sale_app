<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :street %><br>
    <%= form.text_field :street, id: :sale_street %>
  </div>

  <div class="field">
    <%= form.label :city %><br>
    <%= form.text_field :city, id: :sale_city %>
  </div>

  <div class="field">
    <%= form.label :state %><br>
    <%= form.text_field :state, id: :sale_state %>
  </div>

  <div class="field">
    <%= form.label :zip %><br>
    <%= form.text_field :zip, id: :sale_zip %>
  </div>

  <div class="field">
    <%= form.label :date %><br>

    <%= form.date_select :date, id: :sale_date %>
  </div>

  <div class="field">
    <%= form.label :time %><br>
    <%= form.text_field :time, id: :sale_time %>
  </div>

  <div class="field"><br>
    <%= form.label :description %>
    <%= form.text_area :description, id: :sale_description %>
  </div>

  <input type="hidden" name="sale[user_id]" id="user_id" value="<%=@user.id%>" >

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
