<div class="container-fluid form-background">
  <div class="row justify-content-sm-center">
    <div class="form-text">
      <h2 class="form-header">Forgot Password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="field">
          <%#= f.label :email, class: 'edit_form' %>
          <%= f.email_field :email, autofocus: true, class: 'edit_form', placeholder: 'Name@email.com' %>
        </div>
        <br>

        <div class="actions">
          <%= f.submit "Send reset instructions", class: 'button_style' %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
      <p class="loginalert"><%= devise_error_messages! %>
    </div>
  </div>
</div>
