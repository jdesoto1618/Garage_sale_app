<div class="container-small col col-lg-3">
  <h2>Forgot Password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>


    <div class="field">
      <%= f.label :email, class: 'edit_form' %><br>
      <%= f.email_field :email, autofocus: true, class: 'edit_form' %>
    </div>
    <br>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'button_style' %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>

  <p class="loginalert"><%= devise_error_messages! %>
</div>
