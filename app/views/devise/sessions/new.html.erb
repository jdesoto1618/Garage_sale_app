<div class="container-small col col-lg-3">


  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'edit_form' %><br />
      <%= f.email_field :email, autofocus: true, class: 'edit_form' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :password, class: 'edit_form' %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'edit_form' %>
    </div>
    <br>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class: 'edit_form' %>
        <%= f.label :remember_me, class: 'edit_form' %>
      </div>
    <% end -%>
    <br>

    <div class="actions">
      <%= f.submit "Log in", class: 'button_style' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>


</div>
