<div class="container-fluid form-background">
  <div class="row justify-content-sm-center">
    <div class="form-text">

        <h2 class="form-header">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%#= f.label :email, class: 'edit_form' %>
            <%= f.email_field :email, autofocus: true, class: 'edit_form', placeholder: 'Name@email.com', required: true, pattern: '.*\S+.*', oninvalid: "this.setCustomValidity('Email cannot be blank')", onchange: "setCustomValidity('')" %>
          </div>
          <br>

          <div class="field">
            <%#= f.label :password, class: 'edit_form' %>
            <%= f.password_field :password, autocomplete: "off", class: 'edit_form', placeholder: 'Password', required: true, pattern: '.*\S+.*', oninvalid: "this.setCustomValidity('Password cannot be blank')", onchange: "setCustomValidity('')" %>
          </div>
          <br>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, class: 'edit_form' %>
              <%= f.label :remember_me, class: 'edit_form' %>
            </div>
          <% end -%>
          <br>

          <div class="actions">
            <%= f.submit "Log in", class: 'button_style' %>
          </div>
          <br>
        <% end %>

        <%= render "devise/shared/links" %>

        <br>
        <p class="loginalert"><%=alert%></p>
        <p class="loginalert"><%=notice%></p>
        <br>

    </div>
  </div>
</div>
